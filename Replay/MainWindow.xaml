<Window x:Class="Replay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Replay.UI"
        xmlns:model="clr-namespace:Replay.Model"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="{StaticResource BackgroundColor}"
        FontFamily="Consolas"
        FontSize="14pt"
        Foreground="White"
        Title="Replay" Height="500" Width="810">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{Binding ActualHeight,ElementName=TitleBar}"/>
    </WindowChrome.WindowChrome>
    <DockPanel>
        <Grid x:Name="TitleBar" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1"
                Foreground="White" FontSize="10pt" Padding="0, 5, 0, 0" HorizontalAlignment="Center">Replay</TextBlock>
            <StackPanel Grid.Column="2" HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="MinButton" DockPanel.Dock="Right" Foreground="LightGreen" Content="┄" Click="MinButton_Click" Style="{DynamicResource WindowButton}" />
                <Button x:Name="MaxButton" DockPanel.Dock="Right" Foreground="LightGoldenrodYellow" Content="▢" Click="MaxButton_Click" Style="{DynamicResource WindowButton}" />
                <Button x:Name="CloseButton" DockPanel.Dock="Right" Foreground="PaleVioletRed" Content="⨉" Click="CloseButton_Click" Style="{DynamicResource WindowButton}" />
            </StackPanel>
        </Grid>
        <ItemsControl x:Name="ReplEntries" Padding="24, 0, 24, 0" ItemsSource="{Binding Path=Entries}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <avalonEdit:TextEditor
                            PreviewKeyDown="TextEditor_PreviewKeyDown"
                            Initialized="TextEditor_Initialized"
                            local:FocusExtension.IsFocused="{Binding Path=IsFocused}"
                            Loaded="TextEditor_Loaded"
                            Style="{DynamicResource ReplEditor}"></avalonEdit:TextEditor>
                        <TextBlock Tag="stdout" Foreground="LightGray" FontStyle="Italic" Visibility="Collapsed"></TextBlock>
                        <TextBlock Tag="result" Visibility="Collapsed"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </DockPanel>
</Window>
